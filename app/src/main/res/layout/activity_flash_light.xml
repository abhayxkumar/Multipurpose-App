<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashLight"
    android:background="@color/flash_screen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="300px"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="115dp"
        android:fontFamily="Montserrat"
        android:text="Flash Light"
        android:textAlignment="center"
        android:textAppearance="@style/login"
        android:textColor="@color/white"
        android:textFontWeight="800"
        android:textSize="85px" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/flashoff"
        android:background="@color/flash_screen"/>

</RelativeLayout>